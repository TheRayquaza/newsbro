# Server Configuration
PORT="8080"
ENVIRONMENT="dev"

# JWT Configuration
JWT_SECRET="your-secret-key"

# Frontend URLs
FRONTEND_ORIGIN="http://localhost:3000"
LOGIN_REDIRECT_URL="http://localhost:3000/auth/callback"

# Redis Configuration
REDIS_SENTINELS="localhost:26379"
REDIS_MASTER_NAME="mymaster"
REDIS_PASSWORD=""
REDIS_DB="0"

# Kafka Configuration
KAFKA_BROKERS="localhost:9092"
KAFKA_INFERENCE_COMMAND_TOPIC="inference-command"
KAFKA_FEEDBACK_TOPIC="feedback-aggregate"
KAFKA_GROUP_ID="repo-feed-group"

# Model Configuration
DEFAULT_MODEL="tfidf"

FEED_RESCORING_ENABLED="true"
FEED_RESCORING_INTERVAL="10s" # 15m
FEED_RESCORING_BATCH_SIZE="500"
FEED_RESCORING_WORKERS="8"
FEED_RESCORING_THRESHOLD="0.1"
FEED_RESCORING_DECAY_ENABLED="true"
FEED_RESCORING_DECAY_HALFLIFE="60h" # 2.5 days
